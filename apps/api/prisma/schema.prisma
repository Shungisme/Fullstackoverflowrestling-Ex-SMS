generator client {
    provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Gender {
    MALE
    FEMALE
}

model student {
  id          String @id @default(auto()) @map("_id") @db.ObjectId
  studentId   String    @unique
  name        String
  dateOfBirth DateTime
  gender      Gender
  faculty     String
  course      Int
  program     String
  address     String?
  email       String    @unique
  phone       String?
  status      String
  createdAt   DateTime  @default(now())
  updatedAt   DateTime? @updatedAt
}

